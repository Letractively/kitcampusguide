<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">
	<converter>
		<description>Converts a MapSection into a String easily readable by OpenLayers.</description>
		<display-name>MapSectionConverter</display-name>
		<converter-id>mapSectionConverter</converter-id>
		<converter-class>edu.kit.cm.kitcampusguide.presentationlayer.view.MapSectionConverter</converter-class>
	</converter>
	<converter>
		<description>Converts a POIList into a JSON formatted String</description>
		<display-name>POIListConverter</display-name>
		<converter-id>poiListConverter</converter-id>
		<converter-class>edu.kit.cm.kitcampusguide.presentationlayer.view.POIListConverter</converter-class>
	</converter>
	<converter>
		<description>Converts a POI into a JSON formatted String.</description>
		<display-name>POIConverter</display-name>
		<converter-id>poiConverter</converter-id>
		<converter-class>edu.kit.cm.kitcampusguide.presentationlayer.view.POIConverter</converter-class>
	</converter>
	<converter>
		<description>Converts a Route into a JSON formatted String.</description>
		<display-name>RouteConverter</display-name>
		<converter-id>routeConverter</converter-id>
		<converter-class>edu.kit.cm.kitcampusguide.presentationlayer.view.RouteConverter</converter-class>
	</converter>
	<converter>
		<description>Converts a MapPosition into a JSON formatted String.</description>
		<display-name>MapPositionConverter</display-name>
		<converter-id>mapPositionConverter</converter-id>
		<converter-class>edu.kit.cm.kitcampusguide.presentationlayer.view.MapPositionConverter</converter-class>
	</converter>
	<converter>
		<description>Converts a Map into a JSON formatted String.</description>
		<display-name>MapConverter</display-name>
		<converter-id>mapConverter</converter-id>
		<converter-class>edu.kit.cm.kitcampusguide.presentationlayer.view.MapConverter</converter-class>
	</converter>
	<converter>
		<description>Converts a building into a JSON formatted String</description>
		<display-name>BuildingConverter</display-name>
		<converter-id>buildingConverter</converter-id>
		<converter-class>edu.kit.cm.kitcampusguide.presentationlayer.view.BuildingConverter</converter-class>
	</converter>
	<managed-bean>
		<managed-bean-name>mapModel</managed-bean-name>
		<managed-bean-class>edu.kit.cm.kitcampusguide.presentationlayer.view.MapModel</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>

</faces-config>
