<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">
    <application>
    	<system-event-listener>
    		<system-event-listener-class>
    			edu.kit.cm.kitcampusguide.controller.StartupEventListener
    		</system-event-listener-class>
    		<system-event-class>
    			javax.faces.event.PostConstructApplicationEvent
    		</system-event-class>
    	</system-event-listener>
    </application>
    <converter>
    	<description></description>
    	<display-name>MapModelConverter</display-name>
    	<converter-id>mapModelConverter</converter-id>
    	<converter-class>edu.kit.cm.kitcampusguide.presentationlayer.view.converters.MapModelConverter</converter-class>
    </converter>
    <converter>
    	<display-name>OutputConverter</display-name>
    	<converter-id>outputConverter</converter-id>
    	<converter-class>edu.kit.cm.kitcampusguide.presentationlayer.view.converters.OutputConverter</converter-class>
    </converter>
	<managed-bean>
		<managed-bean-name>mapModel</managed-bean-name>
		<managed-bean-class>edu.kit.cm.kitcampusguide.presentationlayer.viewmodel.MapModel</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>POIs</property-name>
			<property-class>java.util.Collection</property-class>
			<value>#{defaultModelValues.defaultPOIs}</value>
		</managed-property>
		<managed-property>
			<property-name>building</property-name>
			<property-class>edu.kit.cm.kitcampusguide.standardtypes.Building</property-class>
			<value>#{defaultModelValues.defaultBuilding}</value>
		</managed-property>
		<managed-property>
			<property-name>map</property-name>
			<property-class>edu.kit.cm.kitcampusguide.standardtypes.Map</property-class>
			<value>#{defaultModelValues.defaultMap}</value>
		</managed-property>
		<managed-property>
			<property-name>mapLocator</property-name>
			<property-class>edu.kit.cm.kitcampusguide.presentationlayer.view.MapLocator</property-class>
			<value>#{defaultModelValues.defaultMapLocator}</value>
		</managed-property>
		<managed-property>
			<property-name>markerTo</property-name>
			<property-class>edu.kit.cm.kitcampusguide.standardtypes.MapPosition</property-class>
			<value>#{defaultModelValues.defaultMarkerTo}</value>
		</managed-property>
		<managed-property>
			<property-name>currentFloorIndex</property-name>
			<property-class>java.lang.Integer</property-class>
			<value>#{defaultModelValues.defaultCurrentFloorIndex}</value>
		</managed-property>
		<managed-property>
			<property-name>highlightedPOI</property-name>
			<property-class>edu.kit.cm.kitcampusguide.standardtypes.POI</property-class>
			<value>#{defaultModelValues.defaultHighlightedPOI}</value>
		</managed-property>
		<managed-property>
			<property-name>markerFrom</property-name>
			<property-class>edu.kit.cm.kitcampusguide.standardtypes.MapPosition</property-class>
			<value>#{defaultModelValues.defaultMarkerFrom}</value>
		</managed-property>
		<managed-property>
			<property-name>route</property-name>
			<property-class>edu.kit.cm.kitcampusguide.standardtypes.Route</property-class>
			<value>#{defaultModelValues.defaultRoute}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>mapListener</managed-bean-name>
		<managed-bean-class>edu.kit.cm.kitcampusguide.controller.MapListenerImpl</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>inputModel</property-name>
			<property-class>edu.kit.cm.kitcampusguide.presentationlayer.viewmodel.InputModel</property-class>
			<value>#{inputModel}</value>
		</managed-property>
		<managed-property>
			<property-name>mapModel</property-name>
			<property-class>edu.kit.cm.kitcampusguide.presentationlayer.viewmodel.MapModel</property-class>
			<value>#{mapModel}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<description>Holds some default values which are used to initialise a new model</description>
		<managed-bean-name>defaultModelValues</managed-bean-name>
		<managed-bean-class>edu.kit.cm.kitcampusguide.controller.DefaultModelValues</managed-bean-class>
		<managed-bean-scope>application</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>inputListener</managed-bean-name>
		<managed-bean-class>edu.kit.cm.kitcampusguide.controller.InputListenerImpl</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>mapModel</property-name>
			<property-class>edu.kit.cm.kitcampusguide.presentationlayer.viewmodel.MapModel</property-class>
			<value>#{mapModel}</value>
		</managed-property>
		<managed-property>
			<property-name>inputModel</property-name>
			<property-class>edu.kit.cm.kitcampusguide.presentationlayer.viewmodel.InputModel</property-class>
			<value>#{inputModel}</value>
		</managed-property>
		<managed-property>
			<property-name>translationModel</property-name>
			<property-class>edu.kit.cm.kitcampusguide.presentationlayer.viewmodel.translationmodel.TranslationModel</property-class>
			<value>#{translationModel}</value>
		</managed-property>
		<managed-property>
			<property-name>defaultModelValueClass</property-name>
			<property-class>edu.kit.cm.kitcampusguide.controller.DefaultModelValues</property-class>
			<value>#{defaultModelValues}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>inputModel</managed-bean-name>
		<managed-bean-class>edu.kit.cm.kitcampusguide.presentationlayer.viewmodel.InputModel</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>translationModel</managed-bean-name>
		<managed-bean-class>edu.kit.cm.kitcampusguide.presentationlayer.viewmodel.translationmodel.TranslationModelImpl</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>poiListener</managed-bean-name>
		<managed-bean-class>edu.kit.cm.kitcampusguide.controller.POIListenerImpl</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>mapModel</property-name>
			<property-class>edu.kit.cm.kitcampusguide.presentationlayer.viewmodel.MapModel</property-class>
			<value>#{mapModel}</value>
		</managed-property>
		<managed-property>
			<property-name>categoryModel</property-name>
			<property-class>edu.kit.cm.kitcampusguide.presentationlayer.viewmodel.CategoryModel</property-class>
			<value>#{categoryModel}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>categoryModel</managed-bean-name>
		<managed-bean-class>edu.kit.cm.kitcampusguide.presentationlayer.viewmodel.CategoryModel</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>categories</property-name>
			<property-class>java.util.Collection</property-class>
			<value>#{defaultModelValues.defaultCategories}</value>
		</managed-property>
		<managed-property>
			<property-name>currentCategories</property-name>
			<property-class>java.util.Collection</property-class>
			<value>#{defaultModelValues.defaultCurrentCategories}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>inputListenerAdapter</managed-bean-name>
		<managed-bean-class>edu.kit.cm.kitcampusguide.controller.InputListenerAdapter</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>inputModel</property-name>
			<property-class>edu.kit.cm.kitcampusguide.presentationlayer.viewmodel.InputModel</property-class>
			<value>#{inputModel}</value>
		</managed-property>
		<managed-property>
			<property-name>translationModel</property-name>
			<property-class>edu.kit.cm.kitcampusguide.presentationlayer.viewmodel.translationmodel.TranslationModel</property-class>
			<value>#{translationModel}</value>
		</managed-property>
		<managed-property>
			<property-name>inputListener</property-name>
			<property-class>edu.kit.cm.kitcampusguide.controller.InputListener</property-class>
			<value>#{inputListener}</value>
		</managed-property>
	</managed-bean>
	<lifecycle>
		<phase-listener>edu.kit.cm.kitcampusguide.presentationlayer.view.MapPhaseListener</phase-listener>
	</lifecycle>

</faces-config>
