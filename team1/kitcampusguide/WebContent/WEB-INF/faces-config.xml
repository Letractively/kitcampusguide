<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">
    <application>
    	<system-event-listener>
    		<system-event-listener-class>
    			edu.kit.cm.kitcampusguide.controller.StartupEventListener
    		</system-event-listener-class>
    		<system-event-class>
    			javax.faces.event.PostConstructApplicationEvent
    		</system-event-class>
    	</system-event-listener>
    </application>
	<converter>
		<description>Converts a MapSection into a String easily readable by OpenLayers.</description>
		<display-name>MapSectionConverter</display-name>
		<converter-id>mapSectionConverter</converter-id>
		<converter-class>edu.kit.cm.kitcampusguide.presentationlayer.view.converters.MapSectionConverter</converter-class>
	</converter>
	<converter>
		<description>Converts a POIList into a JSON formatted String</description>
		<display-name>POIListConverter</display-name>
		<converter-id>poiListConverter</converter-id>
		<converter-class>edu.kit.cm.kitcampusguide.presentationlayer.view.converters.POIListConverter</converter-class>
	</converter>
	<converter>
		<description>Converts a POI into a JSON formatted String.</description>
		<display-name>POIConverter</display-name>
		<converter-id>poiConverter</converter-id>
		<converter-class>edu.kit.cm.kitcampusguide.presentationlayer.view.converters.POIConverter</converter-class>
	</converter>
	<converter>
		<description>Converts a Route into a JSON formatted String.</description>
		<display-name>RouteConverter</display-name>
		<converter-id>routeConverter</converter-id>
		<converter-class>edu.kit.cm.kitcampusguide.presentationlayer.view.converters.RouteConverter</converter-class>
	</converter>
	<converter>
		<description>Converts a MapPosition into a JSON formatted String.</description>
		<display-name>MapPositionConverter</display-name>
		<converter-id>mapPositionConverter</converter-id>
		<converter-class>edu.kit.cm.kitcampusguide.presentationlayer.view.converters.MapPositionConverter</converter-class>
	</converter>
	<converter>
		<description>Converts a Map into a JSON formatted String.</description>
		<display-name>MapConverter</display-name>
		<converter-id>mapConverter</converter-id>
		<converter-class>edu.kit.cm.kitcampusguide.presentationlayer.view.converters.MapConverter</converter-class>
	</converter>
	<converter>
		<description>Converts a building into a JSON formatted String</description>
		<display-name>BuildingConverter</display-name>
		<converter-id>buildingConverter</converter-id>
		<converter-class>edu.kit.cm.kitcampusguide.presentationlayer.view.converters.BuildingConverter</converter-class>
	</converter>
	<converter>
		<description></description>
		<display-name>ChangedPropertiesConverter</display-name>
		<converter-id>changedPropertiesConverter</converter-id>
		<converter-class>edu.kit.cm.kitcampusguide.presentationlayer.view.converters.ChangedPropertiesConverter</converter-class>
	</converter>
	<converter>
		<description></description>
		<display-name>MapLocatorConverter</display-name>
		<converter-id>mapLocatorConverter</converter-id>
		<converter-class>edu.kit.cm.kitcampusguide.presentationlayer.view.converters.MapLocatorConverter</converter-class>
	</converter>
	<managed-bean>
		<managed-bean-name>mapModel</managed-bean-name>
		<managed-bean-class>edu.kit.cm.kitcampusguide.presentationlayer.viewmodel.MapModel</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>POIs</property-name>
			<property-class>java.util.Collection</property-class>
			<value>#{defaultModelValues.defaultPOIs}</value>
		</managed-property>
		<managed-property>
			<property-name>building</property-name>
			<property-class>edu.kit.cm.kitcampusguide.standardtypes.Building</property-class>
			<value>#{defaultModelValues.defaultBuilding}</value>
		</managed-property>
		<managed-property>
			<property-name>map</property-name>
			<property-class>edu.kit.cm.kitcampusguide.standardtypes.Map</property-class>
			<value>#{defaultModelValues.defaultMap}</value>
		</managed-property>
		<managed-property>
			<property-name>mapLocator</property-name>
			<property-class>edu.kit.cm.kitcampusguide.presentationlayer.view.MapLocator</property-class>
			<value>#{defaultModelValues.defaultMapLocator}</value>
		</managed-property>
		<managed-property>
			<property-name>markerTo</property-name>
			<property-class>edu.kit.cm.kitcampusguide.standardtypes.MapPosition</property-class>
			<value>#{defaultModelValues.defaultMarkerTo}</value>
		</managed-property>
		<managed-property>
			<property-name>currentFloorIndex</property-name>
			<property-class>java.lang.Integer</property-class>
			<value>#{defaultModelValues.defaultCurrentFloorIndex}</value>
		</managed-property>
		<managed-property>
			<property-name>highlightedPOI</property-name>
			<property-class>edu.kit.cm.kitcampusguide.standardtypes.POI</property-class>
			<value>#{defaultModelValues.defaultHighlightedPOI}</value>
		</managed-property>
		<managed-property>
			<property-name>markerFrom</property-name>
			<property-class>edu.kit.cm.kitcampusguide.standardtypes.MapPosition</property-class>
			<value>#{defaultModelValues.defaultMarkerFrom}</value>
		</managed-property>
		<managed-property>
			<property-name>route</property-name>
			<property-class>edu.kit.cm.kitcampusguide.standardtypes.Route</property-class>
			<value>#{defaultModelValues.defaultRoute}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>mapListener</managed-bean-name>
		<managed-bean-class>edu.kit.cm.kitcampusguide.controller.MapListenerImpl</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<description>Holds some default values which are used to initialise a new model</description>
		<managed-bean-name>defaultModelValues</managed-bean-name>
		<managed-bean-class>edu.kit.cm.kitcampusguide.controller.DefaultModelValues</managed-bean-class>
		<managed-bean-scope>application</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>inputListener</managed-bean-name>
		<managed-bean-class>edu.kit.cm.kitcampusguide.controller.InputListenerImpl</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>mapModel</property-name>
			<property-class>edu.kit.cm.kitcampusguide.presentationlayer.viewmodel.MapModel</property-class>
			<value>#{mapModel}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>inputModel</managed-bean-name>
		<managed-bean-class>edu.kit.cm.kitcampusguide.presentationlayer.viewmodel.InputModel</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>translationModelImpl</managed-bean-name>
		<managed-bean-class>edu.kit.cm.kitcampusguide.presentationlayer.viewmodel.translationmodel.TranslationModelImpl</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>poiListener</managed-bean-name>
		<managed-bean-class>edu.kit.cm.kitcampusguide.controller.POIListenerImpl</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>mapModel</property-name>
			<property-class>edu.kit.cm.kitcampusguide.presentationlayer.viewmodel.MapModel</property-class>
			<value>#{mapModel}</value>
		</managed-property>
		<managed-property>
			<property-name>categoryModel</property-name>
			<property-class>edu.kit.cm.kitcampusguide.presentationlayer.viewmodel.CategoryModel</property-class>
			<value>#{categoryModel}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>categoryModel</managed-bean-name>
		<managed-bean-class>edu.kit.cm.kitcampusguide.presentationlayer.viewmodel.CategoryModel</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<lifecycle>
		<phase-listener>edu.kit.cm.kitcampusguide.presentationlayer.view.MapPhaseListener</phase-listener>
	</lifecycle>

</faces-config>
