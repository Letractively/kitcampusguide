<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">

<!-- Settings for application -->
	<application>
		<locale-config>
			<default-locale>de</default-locale>
			<supported-locale>en</supported-locale>
		</locale-config>
		<message-bundle>edu.kit.cm.kitcampusguide.view.language.messages</message-bundle>
		<resource-bundle>
			<base-name>edu.kit.cm.kitcampusguide.view.language.messages</base-name>
			<var>msgs</var>
		</resource-bundle>
	</application>
	<converter>
		<description>Converts a POI to a String</description>
		<display-name>POIConverter</display-name>
		<converter-id>poiConverter</converter-id>
		<converter-class>edu.kit.cm.kitcampusguide.view.converter.POIConverter</converter-class>
	</converter>
	<converter>
		<description>Converts a List of POIs to a String</description>
		<display-name>POIListConverter</display-name>
		<converter-id>poiListConverter</converter-id>
		<converter-class>edu.kit.cm.kitcampusguide.view.converter.POIListConverter</converter-class>
	</converter>
	<converter>
		<description>Converts a POICategory to a String</description>
		<display-name>POICategoryConverter</display-name>
		<converter-id>poiCategoryConverter</converter-id>
		<converter-class>edu.kit.cm.kitcampusguide.view.converter.POICategoryConverter</converter-class>
	</converter>
	<converter>
		<description>Converts a List of POICategory to a String</description>
		<display-name>POICategoryListConverter</display-name>
		<converter-id>poiCategoryListConverter</converter-id>
		<converter-class>edu.kit.cm.kitcampusguide.view.converter.POICategoryListConverter</converter-class>
	</converter>
	<converter>
		<description>Converts a POI to its name</description>
		<display-name>POINameConverter</display-name>
		<converter-id>poiNameConverter</converter-id>
		<converter-class>edu.kit.cm.kitcampusguide.view.converter.POINameConverter</converter-class>
	</converter>
	<converter>
		<description>Converts a Route to a String</description>
		<display-name>RouteConverter</display-name>
		<converter-id>routeConverter</converter-id>
		<converter-class>edu.kit.cm.kitcampusguide.view.converter.RouteConverter</converter-class>
	</converter>
</faces-config>
