<?xml version="1.0" encoding="UTF-8" ?>
 
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_1_0.xsd"
        version="1.0">
 
    <named-query name="poi.findPoisByNameWithSuffix">
        <query>
            FROM POI
            WHERE name LIKE ?
        </query>
    </named-query>
    
    <named-query name="poi.findPoisByNameWithPrefix">
        <query>
            FROM POI
            WHERE name LIKE ?
        </query>
    </named-query>
    
    <named-query name="poi.findPoisByCategory">
        <query>
            FROM POI
            WHERE name = Category.name
              AND Category.name = ? 
        </query>
    </named-query>
</entity-mappings>